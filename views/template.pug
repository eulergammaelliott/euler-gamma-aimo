  body
    div.background(id="bg", data-turbolinks-permanent)
      include ./patternsmall.svg
      script.
        function spawn(){
          let svg = document.querySelector('.background svg');
          let g = svg.querySelector('g');
          let rect = svg.getBoundingClientRect();
          for(let x = 0; x < window.innerWidth / rect.width; x++){
            for(let y = 0; y< window.innerHeight / rect.height; y++){
              let newG = document.createElement('g');
              newG.replaceChildren(...g.children);
              svg.appendChild(newG);
              console.log(x, y);
            }
          }
        }
        function animate(){
          document.querySelectorAll('.background ellipse, .background path[pointer-events="all"]').forEach(el => {
            setTimeout(() => {
              if(Math.random()>.98){
                el.classList.add('one');
              }else if(Math.random()>.95){
                el.classList.add('two');
              }else if(Math.random()>.1){
                el.classList.remove('one', 'two');
              }}, Math.random()*4000);
          });
          setTimeout(animate, 4000 + (Math.random()*1000));
        }
        window.addEventListener('load', () => {
                  spawn();
        });

        animate();
